<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8">

    <TextView
            android:id="@+id/textViewTransactionDate"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/textViewTransactionName"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/textViewTransactionDate"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/textViewTransactionBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/textViewTransactionBalance"/>

</RelativeLayout>